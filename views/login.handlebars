<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Login to What Sup!</h2>
        </div>
        <h5>Not a registered user? <a href="/user/register">Signup here!</a></h5>
        {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
        {{/if}}
        <br>
        <div class="card-body">
            <form class="form-group" action="/user/login" method="POST" id="loginForm">
                <label for="username">Username: </label>
                <input name="username" id="username" class="form-control" placeholder="name@email.com" required>
                <br>
                <label for="password">Password: </label>
                <input name="password" id="username" type="password" class="form-control" placeholder="******" required>
                <br>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>